@using System.Threading.Tasks
@model MSEkinci.Northwind.MvcWebUI.ViewModels.LoginViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Purple Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="/node_modules/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="/node_modules/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="/node_modules/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="/node_modules/assets/images/favicon.png" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo">
                                <img src="/node_modules/assets/images/favicon.png">
                            </div>
                            <h4>Hello! let's get started</h4>
                            <h6 class="font-weight-light">Sign in to continue.</h6>
                            <form class="pt-3" method="post" asp-controller="Account" asp-action="Login">
                                <div class="form-group">
                                    <input asp-for="UserName" class="form-control form-control-lg" placeholder="Username">
                                </div>
                                <div class="form-group">
                                    <input asp-for="Password" class="form-control form-control-lg" placeholder="Password">
                                </div>
                                <div class="mt-3">
                                    <button class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" type="submit">SIGN IN</button>
                                </div>
                                <div class="my-2 d-flex justify-content-between align-items-center">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input type="checkbox" asp-for="RememberMe" class="form-check-input"> Remember Me
                                        </label>
                                    </div>
                                    <a href="#" class="auth-link text-black">Forgot password?</a>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Don't have an account? <a asp-controller="Account" asp-action="Register" class="text-primary">Create</a>
                                </div>
                            </form>
                            <div class="text-center mt-4 font-weight-light">
                                Go To <a asp-controller="Product" asp-action="Index" class="text-primary">Home Page</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="/node_modules/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="/node_modules/assets/js/off-canvas.js"></script>
    <script src="/node_modules/assets/js/hoverable-collapse.js"></script>
    <script src="/node_modules/assets/js/misc.js"></script>
    <!-- endinject -->
</body>
</html>