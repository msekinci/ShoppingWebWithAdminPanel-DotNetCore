@model MSEkinci.Northwind.MvcWebUI.ViewModels.CartSummaryViewModel


    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Cart Summary
        <span class="badge">(@Model.Cart.CartLines.Count)</span>
    </a>
    <ul class="dropdown-menu" margin-left="10px;" aria-labelledby="navbarDropdown">

        @foreach (var item in Model.Cart.CartLines)
        {
            <li>
                <a>@item.Product.ProductName <span class="badge">@item.Quantity</span></a>
            </li>
        }
        <li role="separator" class="divider"></li>
        <li><a><span class="glyphicon glyphicon-align-left glyphicon-shopping-cart" aria-hidden="true"></span>@Model.Cart.Total</a></li>
        <li role="separator" class="divider"></li>
        <li>
            <a asp-controller="Cart" asp-action="ListCart">Go to cart details</a>
        </li>
    </ul>

