@model MSEkinci.Northwind.MvcWebUI.ViewModels.CartSummaryViewModel
@{
    ViewData["Title"] = "ListCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    body {
        margin-top: 20px;
    }
</style>
<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<div class="container">
    <div class="row">
        <div class="col-xs-8">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">
                        <div class="row">
                            <div class="col-xs-6">
                                <h5><span class="glyphicon glyphicon-shopping-cart"></span> Shopping Cart</h5>
                            </div>
                            <div class="col-xs-6">
                                <a asp-controller="Product" asp-action="Index" class="btn btn-primary btn-sm btn-block">
                                    <span class="glyphicon glyphicon-share-alt"></span> Continue shopping
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    @foreach (var item in Model.Cart.CartLines)
                    {
                        <div class="row">
                            <div class="col-xs-6">
                                <h4 class="product-name"><strong>@item.Product.ProductName</strong></h4><h4><small>Units In Stock: @item.Product.UnitsInStock</small></h4>
                            </div>
                            <div class="col-xs-6">
                                <div class="col-xs-5 text-right">
                                    <h6><strong>@item.Product.UnitPrice <span class="text-muted">x</span></strong></h6>
                                </div>
                                <div class="col-xs-3">
                                    <input type="text" class="form-control input-sm" value="@item.Quantity">
                                </div>
                                <div class="col-xs-4">
                                    <a class="btn btn btn-danger btn-xs" asp-controller="Cart" asp-action="AddOne" asp-route-productId="@item.Product.ProductId">
                                        <span class="glyphicon glyphicon-plus"></span>
                                    </a>
                                    <a class="btn btn btn-danger btn-xs" asp-controller="Cart" asp-action="RemoveFromCart" asp-route-productId="@item.Product.ProductId">
                                        <span class="glyphicon glyphicon-trash"></span>
                                    </a>
                                    <a class="btn btn btn-danger btn-xs" asp-controller="Cart" asp-action="RemoveOne" asp-route-productId="@item.Product.ProductId">
                                        <span class="glyphicon glyphicon-remove"></span>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <hr>
                    }

                </div>
                <div class="panel-footer">
                    <div class="row text-center">
                        <div class="col-xs-9">
                            <h4 class="text-right">Total <strong>@Model.Cart.Total</strong></h4>
                        </div>
                        <div class="col-xs-3">
                            <a asp-controller="Cart" asp-action="Complete" class="btn btn-success btn-block">
                                Complete Your Shipping
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>